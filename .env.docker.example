# Protocol Guide - Docker Development Environment
# Copy to .env.docker and fill in your API keys

# Database (Docker Postgres - auto-configured)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/protocol_guide

# Redis (Docker Redis - auto-configured)
REDIS_URL=redis://redis:6379

# Supabase (still needed for auth - use your Supabase project)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Services (required for search/embeddings)
ANTHROPIC_API_KEY=sk-ant-xxx
VOYAGE_API_KEY=pa-xxx

# Optional: OpenAI fallback
OPENAI_API_KEY=sk-xxx

# Server Config
PORT=3001
NODE_ENV=development

# CORS (for local frontend)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# Session Cookie
COOKIE_SECRET=your-cookie-secret-here
